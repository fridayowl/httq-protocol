{
  "manifest_version": 3,
  "name": "HTTQ Protocol",
  "version": "1.0.0",
  "description": "Automatically upgrade HTTPS to quantum-safe HTTQ connections",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/httq-16.png",
      "32": "icons/httq-32.png",
      "48": "icons/httq-48.png",
      "128": "icons/httq-128.png"
    }
  },
  "icons": {
    "16": "icons/httq-16.png",
    "32": "icons/httq-32.png",
    "48": "icons/httq-48.png",
    "128": "icons/httq-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
